---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Dancing+Script&family=Leckerli+One&family=Mitr&family=Mynerve&family=Poppins:ital,wght@0,300;0,500;0,600;0,700;0,800;1,400&family=Ubuntu:wght@300&display=swap');

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
  }

  body {
    background-color: #f3f4f6;
  }

  .container {
    display: flex;
    width: 100%;
    max-width: 1200px;
    padding: 20px;
  }
</style>